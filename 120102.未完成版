package pac;

import javax.swing.*;
import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;

public class as {
    JPanel myPanel=new JPanel();
    JLabel label_txt=new JLabel();
    JLabel label_bg=new JLabel();
    JLabel label_basket=new JLabel();
    JLabel label_ball=new JLabel();
    int cell=128;
    int row=0,column=0;
    int aa=0;
    int ss=0;
    //构造方法
    public as() {
        myPanel.addKeyListener(new KeyAdapter() {
            @Override
            public void keyPressed(KeyEvent e) {
                super.keyPressed(e);
                if (e.getKeyCode()==e.VK_DOWN){
                    row++;
                    aa=row*cell;
                    ss=column*cell;
                    label_ball.setBounds(ss,aa,cell,cell);
                }else

                if( ss>512 && ss<0 || aa>720&&aa<0){

                }


                if (e.getKeyCode()==e.VK_UP){
                    row--;
                    label_ball.setBounds(column*cell,row*cell,cell,cell);
                }
                if (e.getKeyCode()==e.VK_LEFT){
                    column--;
                    label_ball.setBounds(column*cell,row*cell,cell,cell);
                }
                if (e.getKeyCode()==e.VK_RIGHT){
                    column++;
                    label_ball.setBounds(column*cell,row*cell,cell,cell);
                }

                if (ss>600 && ss<500 || aa>100&&aa<0){

                }
            }
        });
    }
    //显示窗体方法
    void go1(){

        java.net.URL imgURL2 = as.class.getResource("../img/ball.gif");
        label_ball.setIcon(new ImageIcon(imgURL2));
        label_ball.setBounds(256,588,cell,cell);
        myPanel.add(label_ball);
        java.net.URL imgURL1 = as.class.getResource("../img/basket.jpg");
        label_basket.setIcon(new ImageIcon(imgURL1));
        label_basket.setBounds(600,100,cell,cell);
        myPanel.add(label_basket);

        java.net.URL imgURL3 = as.class.getResource("../img/768.png");
        label_bg.setIcon(new ImageIcon(imgURL3));
        label_bg.setBounds(0,0,1024,768);
        myPanel.add(label_bg);


        label_txt.setText("进球成功！");
        label_txt.setBounds(0,0,200,30);
        myPanel.add(label_txt);

        myPanel.setLayout(null);
        JFrame frame = new JFrame("一个小程序");
        frame.setContentPane(myPanel);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setBounds(100,100,1024,768);

        //frame.pack();
        frame.setVisible(true);
        myPanel.setFocusable(true);
    }
    public static void main(String[] args) {
        new as().go1();
    }
    }
